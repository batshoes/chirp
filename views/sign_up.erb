<h1>Sign Up</h1>
<%= flash[:notice] %>
<form method='POST' action'/sign_up'>

  <input type='text' name='[user]username' placeholder='Username'>
  <input type='text' name='[user]email' placeholder='Email'>
  <input type='password' name='[user]password' placeholder='Password'>
  <input type='password' name='confirm_password' placeholder='Confirm Password'>
  <input type='text' name="[profile]fname" placeholder="First Name">
  <input type='text' name="[profile]lname" placeholder="Last Name">
  <input type='text' name="[profile]zip_code" placeholder="Zip Code">
  <input type='text' name="[profile]occupation" placeholder="Occupation">
  <input type='submit'>
</form>